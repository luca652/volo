<%= stylesheet_link_tag 'resources', media: 'all', 'data-turbolinks-track': 'reload' %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container">
  <div class="filter-container">
    <label for="category-filter">Filter by Category:</label>
    <select id="category-filter" class="form-control">
      <option value="">All Categories</option>
      <% @categories.each do |category| %>
        <option value="<%= category %>"><%= category %></option>
      <% end %>
    </select>
    <button id="filter-button" class="btn btn-primary">Filter</button>
    <button id="create-resource-button" class="btn btn-success ml-2">Create Resource</button> <!-- Added create resource button -->
  </div>

  <div class="card-container">
  <% @resources.each do |resource| %>
    <div class="card" data-category="<%= resource.category %>">
      <div class="card-body">
        <h5 class="card-title"><%= resource.title %></h5>
        <p class="card-text card-text-category"><%= resource.category %></p>
        <p class="card-text"><%= resource.comment %></p>
        <%= image_tag("#{resource.picture_url}") %>
        <p>Pins: <%= resource.pin_count %></p> <!-- Corrected line -->
        <a href="#" class="pin-button" data-resource-id="<%= resource.id %>">
          <i class="fas fa-thumbtack"></i>
        </a>
      </div>
    </div>
  <% end %>
  </div>

  <div class="pins-container">
    <!-- Placeholder for pin cards -->
  </div>
</div>

<script>
  $(document).ready(function() {
    // Button click event handler for creating a new resource card
    $(document).on('click', '#create-resource-button', function() {
      var title = prompt('Enter resource title:');
      var category = prompt('Enter resource category:');
      var comment = prompt('Enter resource comment:');
      var pictureUrl = prompt('Enter resource picture URL:');

      // Perform validation on the input values (optional)
      if (!title || !category || !comment || !pictureUrl) {
        alert('Please fill in all fields.');
        return;
      }

      var newResource = {
        title: title,
        category: category,
        comment: comment,
        picture_url: pictureUrl
      };

      var newCardHTML = `
        <div class="card" data-category="${newResource.category}">
          <div class="card-body">
            <h5 class="card-title">${newResource.title}</h5>
            <p class="card-text card-text-category">${newResource.category}</p>
            <p class="card-text">${newResource.comment}</p>
            <p class="card-text">${newResource.picture_url}</p>
            <a href="#" class="pin-button" data-resource-id="123">
              <i class="fas fa-thumbtack"></i>
            </a>
          </div>
        </div>
      `;

      $('.card-container').append(newCardHTML);
    });

    // Filter button click event handler
    $(document).on('click', '#filter-button', function() {
      var category = $('#category-filter').val();
      console.log('Filter by category: ' + category);

      var cards = $('.card');

      for (var i = 0; i < cards.length; i++) {
        var card = $(cards[i]);
        var cardCategory = card.data('category');

        if (category === '' || cardCategory === category) {
          card.show();
        } else {
          card.hide();
        }
      }
    });

    // Pin button click event handler
    $(document).on('click', '.pin-button', function(e) {
      e.preventDefault();
      var pinButton = $(this);
      var resourceId = pinButton.data('resource-id');

      $.ajaxSetup({
        headers: {
          'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
        }
      });

      $.ajax({
        type: 'POST',
        url: '/resources/' + resourceId + '/pins',
        dataType: 'json',
        success: function(response) {
          if (response.error) {
            alert(response.error);
          } else {
            console.log(response);

            $.ajax({
              type: 'GET',
              url: '/resources/' + response.resource_id,
              dataType: 'html',
              success: function(cardHTML) {
                $('.pins-container').append(cardHTML);
              },
              error: function(xhr, status, error) {
                console.log(xhr.responseText);
              }
            });
          }
        },
        error: function(xhr, status, error) {
          console.log(xhr.responseText);
        }
      });
    });
  });
</script>
