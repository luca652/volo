
  <div class="card">
    <div class="card-group-image">
      <%= image_tag(group.picture_url) %>
    </div>
      <div class="card-body">
        <% if current_user.id == group.user_id %>
          <h5 class= "card-title-admin">
            <%= link_to group.name, group_path(group)%>
            <p><%= group.description %></p>
          </h5>
          <p><%= group.description %></p>
        <% elsif Request.where(group: group, user: current_user).present? %>
          <h5 class="card-title"><%= group.name %></h5>
          <p> <%= group.description %></p>
          <p>Pending approval</p>
        <% else %>
          <h5 class="card-title"><%= group.name %></h5>
          <p><%= group.description %></p>
          <%= simple_form_for [group, @request] do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :group_id, value: group.id %>
          <%= f.submit "Ask to join", class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>
  </div>
