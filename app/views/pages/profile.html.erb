<h2>Ciao <%= @user.first_name %> </h2>
<h4>Groups</h4>
<ul>
  <li>
    <% @groups_admin.each do |group| %>
    <%= group.name %>
    <p>Admin</p>
    <% end %>
  </li>
</ul>

<ul>
  <li>
    <% @groups_member.each do |group| %>
    <%= group.name %>
    <p>Member</p>
    <% end %>
  </li>
</ul>

<h4>My upcoming events</h4>
<ul>
  <li>
    <% @my_events.each do |event| %>
    <p><%= event.name %></p>
    <p><%= event.date %></p>
    <% end %>
  </li>
</ul>
