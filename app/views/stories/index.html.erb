<div class="questionaire-container" data-controller="oval">
  <h1>Story generator</h1>

  <%= simple_form_for [@prompt], html: { data: { oval_target: "container" } } do |f| %>
  <%= f.input :protagonist %>
  <%= f.input :setting %>
  <%= f.input :enemy %>
  <%= f.input :food %>
  <%= f.input :goal %>
  <%= f.submit "Submit", class: "btn btn-success btn-submit", data: { action:"click->oval#loading" }%>
  <% end %>



<div id="oval-container" data-oval-target="spinner" class="hidden-content center-position spinner">
  <%= image_tag "oval.svg"%>
</div>
</div>
